<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:customControls="clr-namespace:Warewolf.Studio.CustomControls;assembly=Warewolf.Studio.CustomControls"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces;assembly=Dev2.Common.Interfaces"
             xmlns:converters="clr-namespace:Dev2.Studio.Core.AppResources.Converters;assembly=Dev2.Studio.Core"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=interfaces:IExplorerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <core:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
        <views:WidthConverter x:Key="WidthConverter" />
        <core:ResourceTypeToIconVisibility x:Key="ResourceTypeToVisibilityConverter" />
        <views:NotConverter x:Key="NotConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding Path=CreateFolderCommand}" Key="F"  Modifiers="Control+Shift" />
    </UserControl.InputBindings>
    <Grid>
        <Grid x:Name="Overlay" Panel.ZIndex="1000" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".5"/>
            </Grid.Background>
        </Grid>

        <Grid x:Name="LayoutRoot" Margin="{StaticResource ElementBorder}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="422*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- URI LOOKUP-->
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        Visibility="{Binding ShowConnectControl, Converter={StaticResource BoolToVisibilityConverter}}" >
                <views:ConnectControl DataContext="{Binding ConnectControlViewModel}"/>
            </StackPanel>
            <!--  SERVICE FILTER  -->
            <Grid Grid.Row="1" Margin="0,-1,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <!--Margin="{StaticResource ElementBorderRight}"-->
                <customControls:SearchTextBox Grid.Row="0" 
                                              Margin="{StaticResource ControlBorderTopRight}"
                                              Grid.Column="0"
                                              x:Name="SearchTextBox" 
                                              Style="{StaticResource SearchTextboxStyle}"
                                              ClearSearchCommand="{Binding ClearSearchTextCommand}"
                                              LabelText="Filter"
                                              HorizontalAlignment="Stretch"
                                              Text="{Binding SearchText, Delay=300, UpdateSourceTrigger=PropertyChanged}" >
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.ExplorerViewFilterSearchHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </customControls:SearchTextBox>
                <Button Grid.Row="0"
                        Grid.Column="1"
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,3,0,-1"
                        Command="{Binding RefreshCommand}"
                        Visibility="{Binding Path=IsRefreshing, Converter={StaticResource NotConverter}}">
                    <fa:FontAwesome TextOptions.TextFormattingMode="Display" 
                                    FontSize="16" 
                                    Icon="Refresh" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Center"/>
                    <i:Interaction.Behaviors>
                        <core:HelpSetter Text="{x:Static languages:Core.ExplorerViewRefreshHelp}" DataContext="{Binding}" />
                    </i:Interaction.Behaviors>
                </Button>
                <views:CircularProgressBar Grid.Row="0"
                                           Grid.Column="1"
                                           Width="25"
                                           Height="25"
                                           Padding="2.5"
                                           Visibility="{Binding Path=IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}" />

            </Grid>
            <!--  EXPLORER TREE  -->

            <ig:XamDataTree Margin="{StaticResource ElementBorderTop}" 
                            x:Name="ExplorerTree"
                            Grid.Row="2"
                            ActiveDataItem="{Binding SelectedItem, Mode=TwoWay}"
                            IsSelectedMemberPath="IsSelected"
                            DisplayMemberPath="DisplayName"
                            IsDraggable="False"
                            IsDropTarget="False"
                            InitializeNode="ExplorerTree_OnInitializeNode"
                            NodeExitedEditMode="ExplorerTree_OnNodeExitedEditMode"
                            SelectedDataItems="{Binding SelectedDataItems}"
                            ItemsSource="{Binding Environments}"
                            NodeDragDrop="ExplorerTree_OnNodeDragDrop"                            
                            NodeLineVisibility="Hidden" >
                <ig:DragDropManager.DragSource>
                    <ig:DragSource IsDraggable="False" DragChannels="ExplorerChannel" />
                </ig:DragDropManager.DragSource>
                <ig:XamDataTree.EditingSettings>
                    <ig:TreeEditingSettings AllowDeletion="False"
                                            AllowEditing="True"
                                            IsEnterKeyEditingEnabled="False"
                                            IsF2EditingEnabled="True"
                                            IsMouseActionEditingEnabled="None"
                                            IsOnNodeActiveEditingEnabled="False" />
                </ig:XamDataTree.EditingSettings>

                <ig:XamDataTree.GlobalNodeLayouts>
                    <ig:NodeLayout Key="Environments"
                                   DisplayMemberPath="DisplayName"
                                   IsExpandedMemberPath="IsExpanded"
                                   TargetTypeName="IEnvironmentViewModel">
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0"
                                            Grid.Column="0"
                                            Width="20"
                                            Height="20"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding Path=Data.RefreshCommand}"
                                            Padding="-4"
                                            Style="{StaticResource ExplorerTreeButtonStyle}">
                                        <Grid>
                                            <Image Width="18" Height="18" Source="{StaticResource System-Logo}"
                                                   Visibility="{Binding Path=Data.IsServerIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            <Image Width="18" Height="18" Source="{StaticResource System-Logo-Mono}"
                                                   Visibility="{Binding Path=Data.IsServerUnavailableIconVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                        </Grid>
                                    </Button>

                                    <views:CircularProgressBar Grid.Row="0" Grid.Column="0" Visibility="{Binding Path=Data.IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock FontSize="12" Foreground="Black" Padding="0,4,0,4"  Text="{Binding Data.DisplayName}" />
                                        <TextBlock Text=" (" Padding="0,4,0,4" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Data.ChildrenCount, Mode=OneWay}" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                        <TextBlock Text=")" Padding="0,4,0,4" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding Path=Data.Expand}"  />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </StackPanel>
                                    <ig:ContextMenuService.Manager>
                                        <ig:ContextMenuManager>
                                            <ig:ContextMenuManager.ContextMenu>
                                                <ig:XamContextMenu x:Name="ExplorerEnvironmentMenu">
                                                    <ig:XamContextMenu.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="NewService"
                                                                    InputGestureText="[Ctrl+W]"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WorkflowService}"
                                                                    Header="New Workflow Service"
                                                                    Visibility="{Binding Path=Data.CanCreateWorkflowService, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-WorkflowService}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewServerSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.ServerSource}"
                                                                    Header="New Server Source"
                                                                    Visibility="{Binding Path=Data.CanCreateServerSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource System-Logo-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewDataBaseService"
                                                                    InputGestureText="[Ctrl+Shift+D]"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.DbService}"
                                                                    Header="New Database Connector"
                                                                    Visibility="{Binding Path=Data.CanCreateDbService, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-DB}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.DbSource}"
                                                                    Header="New Database Source"
                                                                    Visibility="{Binding Path=Data.CanCreateDbSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-DB-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewWebService"
                                                                    InputGestureText="[Ctrl+Shift+W]"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WebService}"
                                                                    Header="New Web Service Connector"
                                                                    Visibility="{Binding Path=Data.CanCreateWebService, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-WebService}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewWebSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.WebSource}"
                                                                    Header="New Web Service Source"
                                                                    Visibility="{Binding Path=Data.CanCreateWebSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-WebService-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewPluginService"
                                                                    InputGestureText="[Ctrl+Shift+P]"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.PluginService}"
                                                                    Header="New Plugin Connector"
                                                                    Visibility="{Binding Path=Data.CanCreatePluginService, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-DLL}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewPluginSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.PluginSource}"
                                                                    Header="New Plugin Source"
                                                                    Visibility="{Binding Path=Data.CanCreatePluginSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Explorer-DLL-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewEmailSource"
                                                                    Command="{Binding Path=Data.NewCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.EmailSource}"
                                                                    Header="New Email Source"
                                                                    Visibility="{Binding Path=Data.CanCreateEmailSource, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12" Height="12" Source="{StaticResource Utility-SendMail}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewFolder"
                                                                    InputGestureText="[Ctrl+Shift+F]"
                                                                    Command="{Binding Path=Data.CreateFolderCommand}"
                                                                    CommandParameter="{x:Static data:ResourceType.Folder}"
                                                                    Header="New Folder"
                                                                    Visibility="{Binding Path=Data.CanCreateFolder, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuSeparator Visibility="{Binding Path=Data.CanDeploy, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                    <ig:XamMenuItem Name="Deploy"
																    Command="{Binding Path=Data.DeployCommand}"
                                                                    CommandParameter="{Binding Path=Data}"
                                                                    Header="Deploy"
                                                                    Visibility="{Binding Path=Data.CanDeploy, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                    <ig:XamMenuSeparator Visibility="{Binding Path=Data.CanShowServerVersion, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                    <ig:XamMenuItem Name="ServerVersion"
                                                                    Header="Server Version"
                                                                    Command="{Binding Path=Data.ShowServerVersionCommand}"
                                                                    Visibility="{Binding Path=Data.CanShowServerVersion, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                </ig:XamContextMenu>
                                            </ig:ContextMenuManager.ContextMenu>
                                        </ig:ContextMenuManager>
                                    </ig:ContextMenuService.Manager>
                                </Grid>

                            </DataTemplate>
                        </ig:NodeLayout.ItemTemplate>
                    </ig:NodeLayout>

                    <ig:NodeLayout Key="Children"
                                   DisplayMemberPath="ResourceName"
                                   IsExpandedMemberPath="IsExpanded"
                                   TargetTypeName="IExplorerItemViewModel" 
                                   Visibility="{Binding Path=Data.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ig:NodeLayout.EditorTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBox MaxWidth="200" Height="20" Padding="0,4,0,4" 
                                         Text="{Binding Data.ResourceName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" GotKeyboardFocus="UIElement_OnGotKeyboardFocus"></TextBox>
                                </Grid>
                            </DataTemplate>
                        </ig:NodeLayout.EditorTemplate>
                        <ig:NodeLayout.ItemTemplate>
                            <DataTemplate>
                                <DataTemplate.Triggers>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0" 
                                                                               Storyboard.TargetName="EditPermissionImageEnabled" 
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Enabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Disabled}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="EditPermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageEnabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0"
                                                                               Storyboard.TargetName="ExecutePermissionImageDisabled"
                                                                               Storyboard.TargetProperty="Source">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </DataTemplate.Triggers>
                                <!-- ADD NEW GRID LAYOUT TO ALIGN DATA TREE ITEMS -->
                                <Grid>
                                    <Grid.Width>
                                        <MultiBinding Converter="{StaticResource WidthConverter}">
                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTreeNodeControl}}" />
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTree}}" />
                                        </MultiBinding>
                                    </Grid.Width>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="22"></ColumnDefinition>
                                        <ColumnDefinition Width="22"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <!--  CONTEXT MENU FOR THE EXPLORER TREE  -->
                                    <ig:ContextMenuService.Manager>
                                        <ig:ContextMenuManager>
                                            <ig:ContextMenuManager.ContextMenu>
                                                <ig:XamContextMenu x:Name="ExplorerMenu">
                                                    <ig:XamContextMenu.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Background="{StaticResource WareWolfWhiteBrush}" Orientation="Vertical" />
                                                        </ItemsPanelTemplate>
                                                    </ig:XamContextMenu.ItemsPanel>

                                                    <ig:XamMenuItem Name="Open"
                                                                InputGestureText="[Ctrl+W]"
                                                                Command="{Binding Path=Data.OpenCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.WorkflowService}"
                                                                Header="Open"
                                                                Visibility="{Binding Path=Data.CanView,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewService"
                                                                InputGestureText="[Ctrl+W]"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.WorkflowService}"                                                                
                                                                Header="New Workflow Service"
                                                                Visibility="{Binding Path=Data.CanCreateWorkflowService,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-WorkflowService}" />
                                                        </ig:XamMenuItem.Icon>
                                                        <ig:XamMenuItem.InputBindings>
                                                            <KeyBinding Key="W" Modifiers="Control" Command="{Binding Path=Data.NewCommand}"/>
                                                        </ig:XamMenuItem.InputBindings>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="NewServerSource"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.ServerSource}"
                                                                Header="New Server Source"
                                                                Visibility="{Binding Path=Data.CanCreateServerSource,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource System-Logo-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewDataBaseService"
                                                                InputGestureText="[Ctrl+Shift+D]"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.DbService}"
                                                                Header="New Database Connector"
                                                                Visibility="{Binding Path=Data.CanCreateDbService,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-DB}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewDataBaseSource"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.DbSource}"
                                                                Header="New Database Source"
                                                                Visibility="{Binding Path=Data.CanCreateDbSource,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-DB-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewWebService"
                                                                InputGestureText="[Ctrl+Shift+W]"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.WebService}"
                                                                Header="New Web Service Connector"
                                                                Visibility="{Binding Path=Data.CanCreateWebService,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-WebService}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewWebSource"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.WebSource}"
                                                                Header="New Web Service Source"
                                                                Visibility="{Binding Path=Data.CanCreateWebSource,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-WebService-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewPluginService"
                                                                InputGestureText="[Ctrl+Shift+P]"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.PluginService}"
                                                                Header="New Plugin Connector"
                                                                Visibility="{Binding Path=Data.CanCreatePluginService,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-DLL}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewPluginSource"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.PluginSource}"
                                                                Header="New Plugin Source"
                                                                Visibility="{Binding Path=Data.CanCreatePluginSource,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-DLL-Create}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="NewEmailSource"
                                                                Command="{Binding Path=Data.NewCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.EmailSource}"
                                                                Header="New Email Source"
                                                                Visibility="{Binding Path=Data.CanCreateEmailSource,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Utility-SendMail}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuSeparator />
                                                    <ig:XamMenuItem Name="NewFolderFromItem"
                                                                InputGestureText="[Ctrl+Shift+F]"
                                                                Command="{Binding Path=Data.CreateFolderCommand}"
                                                                CommandParameter="{x:Static data:ResourceType.Folder}"
                                                                Header="New Folder"
                                                                Visibility="{Binding Path=Data.CanCreateFolder,                                                        
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </ig:XamMenuItem>
                                                    <ig:XamMenuItem Name="Rename"
																InputGestureText="[F2]"
                                                                Command="{Binding Path=Data.RenameCommand}"
                                                                CommandParameter="{Binding Data}"
                                                                Header="Rename"
                                                                Visibility="{Binding Path=Data.CanRename,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" >
                                                        <i:Interaction.Behaviors>
                                                            <views:RenameTreeNode DataContext="{Binding Data}" Node="{Binding Node}"  Tree="{Binding Path=Node.Manager.NodeLayout.Tree}"/>
                                                        </i:Interaction.Behaviors>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="Delete"
																Command="{Binding Path=Data.DeleteCommand}"
                                                                CommandParameter="{Binding Data}"
                                                                Header="Delete"
                                                                Visibility="{Binding Path=Data.CanDelete,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" />

                                                    <ig:XamMenuItem Name="Deploy"
																Command="{Binding Path=Data.DeployCommand}"
                                                                CommandParameter="{Binding Path=Data}"
                                                                Header="Deploy"
                                                                Visibility="{Binding Path=Data.CanDeploy,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" />
                                                    <ig:XamMenuItem Name="Dependencies"
																Command="{Binding Path=Data.ShowDependenciesCommand}"
                                                                CommandParameter="{Binding Data}"
                                                                Header="Show Dependencies"
                                                                Visibility="{Binding Path=Data.CanShowDependencies,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" />

                                                    <ig:XamMenuSeparator 
                                                    Visibility="{Binding Path=Data.CanShowVersions,
                                                                Converter={StaticResource BoolToVisibilityConverter}}"
                                                    />

                                                    <ig:XamMenuItem Name="ShowHideVersions"
                                                                Command="{Binding Path=Data.ShowVersionHistory}"
                                                                Header="{Binding Path=Data.VersionHeader}"
                                                                Visibility="{Binding Path=Data.CanShowVersions,
                                                                Converter={StaticResource BoolToVisibilityConverter}}">

                                                        <ig:XamMenuItem.Icon>
                                                            <Image Width="12"
                                                               Height="12"
                                                               Source="{StaticResource Explorer-Permission-Menu}" />
                                                        </ig:XamMenuItem.Icon>
                                                    </ig:XamMenuItem>

                                                    <ig:XamMenuItem Name="Rollback"
																Command="{Binding Path=Data.RollbackCommand}"
                                                                CommandParameter="{Binding Data}"
                                                                Header="Make Current Version"
                                                                Visibility="{Binding Path=Data.IsVersion,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" />

                                                    <ig:XamMenuItem Name="OpenVersion"
																Command="{Binding Path=Data.OpenVersionCommand}"
                                                                CommandParameter="{Binding Data}"
                                                                Header="Open Version"
                                                                Visibility="{Binding Path=Data.IsVersion,
                                                                                     Converter={StaticResource BoolToVisibilityConverter}}" />

                                                </ig:XamContextMenu>
                                            </ig:ContextMenuManager.ContextMenu>
                                        </ig:ContextMenuManager>
                                    </ig:ContextMenuService.Manager>

                                    <!-- ADD TEXT TRIMMING TO DISPLAY ECLIPSE ON VIEW WIDTH SETTING -->
                                    
                                        <Grid Margin="0,0,-22,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                        
                                        <TextBlock x:Name="ResourceNameTextBlock"
                                                   MinWidth="5"
                                                   Height="20"
                                                   Focusable="True"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Stretch"
                                                   Text="{Binding Path=Data.ResourceName}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                                    <i:InvokeCommandAction Command="{Binding Path=Data.Expand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" Text="(" Padding="0,4,0,4" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Data.ChildrenCount, Mode=OneWay}" Padding="0,4,0,4" 
                                                   Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                            <TextBlock Grid.Column="3" Text=")" Padding="0,4,0,4" Visibility="{Binding Data.ChildrenCount, Converter={StaticResource IntToVisibilityConverter}}"/>
                                        </Grid>
                                    
                                    <!-- VIEW ICON -->
                                    <Button x:Name="EditButton"
                                            Width="22"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,-22,0"
                                            Command="{Binding Path=Data.OpenCommand}"
                                            Style="{StaticResource ExplorerTreeButtonStyle}"
                                            Visibility="{Binding Data.CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                                            ToolTip="{Binding Path=Data.EditToolTip}">
                                        <Button.Content>
                                            <StackPanel>
                                                <!-- CHANGE TOP MARGIN TO ALIGN EDIT IMAGE WITH TEXTBLOCK -->
                                                <Image x:Name="EditPermissionImageDisabled"
                                                       Width="14"
                                                       Height="15"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource System-Spacer}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Image x:Name="EditPermissionImageEnabled"
                                                       Width="14"
                                                       Height="15"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource Explorer-Permission-Enabled}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>

                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                    <!-- PLAY ICON -->
                                    <Button x:Name="ExecuteButton"
                                            Width="22"
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,-22,0"
                                            Style="{StaticResource ExplorerTreeButtonStyle}"
                                            Visibility="{Binding Data.CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"
                                            ToolTip="{Binding Path=Data.EditToolTip}">
                                        <Button.Content>
                                            <StackPanel>
                                                <!-- CHANGE TOP MARGIN TO ALIGN EDIT IMAGE WITH TEXTBLOCK -->
                                                <Image x:Name="ExecutePermissionImageDisabled"
                                                       Height="11"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource System-Spacer}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Image x:Name="ExecutePermissionImageEnabled"
                                                       Height="11"
                                                       Margin="0,-1,0,0"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="{StaticResource Explorer-Run-Enabled}" >
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ig:NodeLayout.ItemTemplate>
                        <ig:NodeLayout.ExpandedIconTemplate>
                            <DataTemplate>
                                <Image x:Name="ResourceImage"
                                       Width="14"
                                       Height="14"
                                       Margin="-37,0,0,0"
                                       Source="{Binding Data.ResourceType, Converter={StaticResource ResourceTypeToIconConverter}}"
                                       Visibility="{Binding Data.ResourceType, Converter={StaticResource ResourceTypeToVisibilityConverter}}" >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=Data.Expand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                            </DataTemplate>
                        </ig:NodeLayout.ExpandedIconTemplate>
                        <ig:NodeLayout.CollapsedIconTemplate>
                            <DataTemplate>
                                <!-- CHANGE TOP MARGIN TO ALIGN RESOURCE IMAGE -->
                                <Image x:Name="ResourceImage"
                                       Width="14"
                                       Height="15"
                                       Margin="-37,0,-5,0"
                                       Source="{Binding Data.ResourceType, Converter={StaticResource ResourceTypeToIconConverter}}"
                                       Visibility="{Binding Data.ResourceType, Converter={StaticResource ResourceTypeToVisibilityConverter}}" >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=Data.Expand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                            </DataTemplate>
                        </ig:NodeLayout.CollapsedIconTemplate>
                    </ig:NodeLayout>
                </ig:XamDataTree.GlobalNodeLayouts>
            </ig:XamDataTree>
        </Grid>
    </Grid>
</UserControl>