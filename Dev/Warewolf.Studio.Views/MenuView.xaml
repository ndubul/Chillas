<UserControl x:Class="Warewolf.Studio.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:studio="clr-namespace:Dev2.Common.Interfaces.Studio;assembly=Dev2.Common.Interfaces"
             xmlns:languages="clr-namespace:Warewolf.Studio.Resources.Languages;assembly=Warewolf.Studio.Resources"
             xmlns:core="clr-namespace:Warewolf.Studio.Core;assembly=Warewolf.Studio.Core"
             Width="150"
             ScrollViewer.VerticalScrollBarVisibility="Disabled"
             d:DataContext="{d:DesignInstance Type={x:Type studio:IMenuViewModel}}"
             mc:Ignorable="d">

    <DockPanel x:Name="MenuPanel" Background="{StaticResource MenuPanelGradient}">

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeave" SourceName="MenuPanel">
                <i:InvokeCommandAction Command="{Binding SlideClosedCommand}" />
            </i:EventTrigger>
            <i:EventTrigger EventName="MouseEnter" SourceName="MenuPanel">
                <i:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <Grid x:Name="Menu">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />


            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Width="15"
                   Height="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="{StaticResource System-Spacer}" />

            <Image x:Name="LogoImage"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Width="35"
                   Height="35"
                   Margin="12,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Source="{StaticResource System-Logo}"
                   Stretch="Fill" />

            <Separator Grid.Row="2"
                       Grid.ColumnSpan="3"
                       Margin="0,10,0,10"
                       Style="{StaticResource MenuSeparator}" />

            <!-- NEW -->
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Command="{Binding NewCommand}"
                    CommandParameter="Workflow"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=NewServiceToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="Plus" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=NewLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuNewServiceHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <!-- SAVE -->
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=SaveToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="Save" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=SaveLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuSaveTabHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <!-- DEPLOY -->
            <Button Grid.Row="5"
                    Grid.Column="1"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Command="{Binding DeployCommand}"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=DeployToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="6.5,8.5,10.5,8.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="18"
                                        FontWeight="Light"
                                        Icon="PaperPlaneOutlined" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=DeployLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuDeployHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Separator Grid.Row="6"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Margin="0,5,0,5"
                       Style="{StaticResource MenuSeparator}" />

            <!-- DB -->
            <Button Grid.Row="7"
                    Grid.Column="1"
                    Command="{Binding NewCommand}"
                    CommandParameter="DatabaseService"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=DatabaseToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="Database" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=DatabaseLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuNewDatabaseConnectorHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <!-- PLUGIN -->
            <Button Grid.Row="8"
                    Grid.Column="1"
                    Command="{Binding NewCommand}"
                    CommandParameter="ResourceService"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=PluginToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="6.5,7.5,8.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="Plug" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=DLLLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuNewPluginConnectorHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <!-- WEB -->
            <Button Grid.Row="9"
                    Grid.Column="1"
                    Command="{Binding NewCommand}"
                    CommandParameter="WebService"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=WebServiceToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                                       Height="35"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Background="Transparent">

                    <Image Name="image1" Width="20" Height="20" Margin="7.5,7.5,7.5,7.5" Source="{StaticResource Menu-System-WebService}" >
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image Name="image2" Width="20" Height="20" Margin="7.5,7.5,7.5,7.5" Source="{StaticResource Menu-System-WebService-MouseOver}" >
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Height="35"
                                           HorizontalAlignment="Left"
                                           Padding="16,8,0,5"
                                           Style="{StaticResource MenuTextBlockStyle}"
                                           Text="{Binding Path=WebLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuNewWebConnectorHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Separator Grid.Row="10"
                       Grid.ColumnSpan="3"
                       Margin="0,5,0,5"
                       Style="{StaticResource MenuSeparator}" />

            <!-- TASK -->
            <Button Grid.Row="11"
                    Grid.Column="1"
                    Command="{Binding OpenSchedulerCommand}"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=SchedulerToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="History" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=TaskLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuSchedulerHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <!-- DEBUG -->
            <Button Grid.Row="12"
                    Grid.Column="1"
                    Command="{Binding ExecuteServiceCommand}"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding DebugToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Icon="{Binding DebugIcon}" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=DebugLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuDebugHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Separator Grid.Row="13"
                       Grid.ColumnSpan="3"
                       Margin="0,5,0,5"
                       Style="{StaticResource MenuSeparator}" />

            <!-- SETTINGS -->
            <Button Grid.Row="14"
                    Grid.Column="1"
                    Command="{Binding OpenSettingsCommand}"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=SettingsToolTip}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="5.5,8.5,9.5,8.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="18"
                                        FontWeight="Light"
                                        Icon="Cogs" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=SettingsLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuSettingsHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Separator Grid.Row="15"
                       Grid.ColumnSpan="3"
                       Margin="0,5,0,5"
                       Style="{StaticResource MenuSeparator}" />

            <!-- HELP -->
            <Button Grid.Row="16"
                    Grid.Column="1"
                    Command="{Binding SupportCommand}"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding Path=HelpToolTip}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="8.5,6.5,.5,6.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="22"
                                        FontWeight="Light"
                                        Icon="Question" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=SupportLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Button Grid.Row="17"
                    Grid.Column="1"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Visibility="{Binding HasNewVersion, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding DownloadToolTip}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="7.5,7.5,7.5,6.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20"
                                        FontWeight="Light"
                                        Foreground="{StaticResource WareWolfOrangeBrush}"
                                        Icon="ArrowCircleDown" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               FontSize="{StaticResource FontSize-Normal}"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=NewVersionLabel}" />
                </DockPanel>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuNewVersionHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Separator Grid.Row="18"
                       Grid.ColumnSpan="3"
                       Margin="0,5,0,5"
                       Style="{StaticResource MenuSeparator}" />

            <Button Grid.Row="19"
                    Grid.Column="1"
                    Width="{Binding ButtonWidth}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding LockCommand}"
                    Style="{StaticResource SideMenuButtonStyle}"
                    ToolTip="{Binding LockToolTip}">
                <DockPanel Width="{Binding ButtonWidth}"
                           Height="35"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Background="Transparent">
                    <TextBlock Width="35"
                               Height="35"
                               MaxWidth="35"
                               MaxHeight="35"
                               Padding="9.5,7.5,5.5,7.5"
                               Style="{StaticResource MenuTextBlockStyle}">
                        <fa:FontAwesome FontSize="20" Icon="{Binding Path=LockImage}" />
                    </TextBlock>
                    <TextBlock Height="35"
                               HorizontalAlignment="Left"
                               FontSize="{StaticResource FontSize-Normal}"
                               Padding="15,8,0,5"
                               Style="{StaticResource MenuTextBlockStyle}"
                               Text="{Binding Path=LockLabel}" />
                </DockPanel>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseEnter">
                        <i:InvokeCommandAction Command="{Binding IsOverLockCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeave">
                        <i:InvokeCommandAction Command="{Binding IsNotOverLockCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <i:Interaction.Behaviors>
                    <core:HelpSetter Text="{x:Static languages:Core.MenuLockMenuHelp}" 
                                     DataContext="{Binding .}" />
                </i:Interaction.Behaviors>
            </Button>

            <Image Grid.Row="20"
                   Grid.ColumnSpan="3"
                   Width="15"
                   Height="5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="{StaticResource System-Spacer}" />

        </Grid>
    </DockPanel>
</UserControl>
